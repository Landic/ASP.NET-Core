@model GuestBook.Models.RegisterModel

@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box-register">
		<form asp-action="Register" class="register-form">
			<div asp-validation-summary="ModelOnly"></div>
			<div>
				<label asp-for="Fullname" class="control-label"></label>
			<input asp-for="Fullname" class="inp" />
				<span asp-validation-for="Fullname" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Login" class="control-label"></label>
			<input asp-for="Login" class="inp" />
				<span asp-validation-for="Login" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Password" class="control-label"></label>
			<input asp-for="Password" class="inp" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="PasswordConfirm" class="control-label"></label>
			<input asp-for="PasswordConfirm" class="inp" />
				<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
			</div>
			<div class="form-group">
			<input type="submit" value="Зарегистрироваться" class="butt" />
			</div>
			<div>
			<a asp-action="Login">Войти в аккаунт</a>
			</div>
		</form>
</div>