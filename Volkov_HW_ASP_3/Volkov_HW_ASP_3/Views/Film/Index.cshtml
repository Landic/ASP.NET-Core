@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
	<a asp-action="Create">Добавить новый фильм</a>
</p>

@foreach(var film in ViewBag.Films)
{
	<div class="box">
		<img src="@film.Poster"/>
		<div>
			<p>Название: @film.Name</p>
			<p>Режиссер: @film.Producer.Name</p>
			<p>Жанр: @film.Genre.Name</p>
			<p>Год: @film.Year</p>
			<p>Описание: @film.Description</p>
			<a asp-action="Edit" asp-route-id="@film.ID">Изменить</a>
			<a asp-action="Delete" asp-route-id="@film.ID">Удалить</a>
			<a asp-action="Details" asp-route-id="@film.ID">Информация</a>
		</div>
	</div>
}